<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sankyu"
        android:text="Midlaner"
        android:textColor="@color/black"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        ></EditText>

    <EditText
        android:id="@+id/textoluchadores"
        android:layout_width="138dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:text="Luchadores"
        android:fontFamily="@font/seagramtfb"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>
    <EditText
        android:id="@+id/textomagos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Magos"
        android:textSize="22dp"
        android:fontFamily="@font/seagramtfb"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/magos"
        app:layout_constraintStart_toStartOf="@id/magos"
        ></EditText>
    <EditText
        android:id="@+id/textoasesinos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:fontFamily="@font/seagramtfb"
        android:text="Asesinos"
        app:layout_constraintEnd_toEndOf="@+id/asesinos"
        android:textSize="22dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/asesinos"
        ></EditText>

    <ImageButton
        android:id="@+id/luchador"
        android:layout_width="135dp"
        android:layout_height="625dp"
        android:src="@drawable/irelia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:layout_marginTop="40dp">

    </ImageButton>

    <ImageButton
        android:id="@+id/magos"
        android:layout_width="135dp"
        android:layout_height="625dp"
        android:scaleType="centerCrop"
        android:src="@drawable/leblanc"
        app:layout_constraintEnd_toEndOf="@+id/titulo"
        app:layout_constraintStart_toStartOf="@+id/titulo"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:layout_marginTop="30dp"
       />

    <ImageButton
        android:id="@+id/asesinos"
        android:layout_width="135dp"
        android:layout_height="620dp"
        android:src="@drawable/quiyanna"
      app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        android:layout_marginTop="30dp"
        ></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>
